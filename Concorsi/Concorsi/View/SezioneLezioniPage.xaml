<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Concorsi.View.SezioneLezioniPage"
             xmlns:xfx="clr-namespace:Xfx;assembly=Xfx.Controls"
             Title="Lezioni">
    <ContentPage.Content>
        <StackLayout>
                <StackLayout Padding="20,0,20,0" >

                    <xfx:XfxCardView CornerRadius="20" Elevation="10" HeightRequest="180" Padding="5">
                        <StackLayout Orientation="Horizontal" Padding="5">
                            <Image 
                                       Source="videolezioni.png" 
                                       WidthRequest="120"
                                Margin="5,0,0,0"
                                VerticalOptions="CenterAndExpand"
                                HorizontalOptions="StartAndExpand"
                                       HeightRequest="120">
                            </Image>
                            <Label
                                VerticalOptions="CenterAndExpand"
                                Text="{Binding VideoLezioni}">
                            </Label>
                        </StackLayout>
                        <xfx:XfxCardView.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding VaiPaginaListaMaterieVideolezioniPage}"/>
                        </xfx:XfxCardView.GestureRecognizers>
                    </xfx:XfxCardView>


                <xfx:XfxCardView CornerRadius="20" Elevation="10" HeightRequest="180" Padding="10">
                        <StackLayout Orientation="Horizontal">
                            <Image  
                                Source="apprendimento.png" 
                                WidthRequest="120"
                                Margin="5,0,0,0"
                                VerticalOptions="CenterAndExpand"
                                HorizontalOptions="StartAndExpand"
                                HeightRequest="120">
                            </Image>
                            <Label 
                                 VerticalOptions="CenterAndExpand"
                                   Text="{Binding TestoApprendimento}">
                            </Label>
                        </StackLayout>
                        <xfx:XfxCardView.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding VaiPaginaApprendimento}"/>
                        </xfx:XfxCardView.GestureRecognizers>
                    </xfx:XfxCardView>
                </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>