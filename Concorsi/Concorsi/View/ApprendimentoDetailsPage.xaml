<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Concorsi.View.ApprendimentoDetailsPage">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="FillAndExpand" x:Name="StackHistoryDomande">
            <ListView x:Name="lstCronologiaDomande"
                      ItemsSource="{Binding ListaDomande}"
                      HasUnevenRows="True" 
                      SeparatorColor="Black"
                      >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Vertical">
                                <Label Text="{Binding Domanda}"
                                       TextColor="Black"
                                       HorizontalTextAlignment="Center"
                                       VerticalTextAlignment="Start"
                                       FontAttributes="Bold"/>
                                <Grid BindingContext="{Binding test}"/>

                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>